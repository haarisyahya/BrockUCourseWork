package Assign5;
import java.util.Comparator;

/** Trivial implementation of a simple comparator.
  */

public class GridFieldComparatorByHeight implements Comparator<GridField> {

 /*Simply compares two arguments and comapres the difference between the two arguments,
  * in this case it is the height of the array
  */
 @Override
 public int compare(GridField arg0, GridField arg1) {
  return arg0.getHeight() - arg1.getHeight();
 }
 
}